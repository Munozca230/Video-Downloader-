{
  "manifest_version": 3,
  "name": "Drive Video Downloader",
  "version": "1.0.1",
  "description": "Descarga videos de Google Drive que no permiten descarga directa",
  "permissions": [
    "webRequest",
    "storage",
    "downloads",
    "activeTab",
    "tabs",
    "scripting",
    "debugger"
  ],
  "host_permissions": [
    "*://*.google.com/*",
    "*://*.googleusercontent.com/*",
    "*://*.googlevideo.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://drive.google.com/*",
        "*://*.drive.google.com/*",
        "*://docs.google.com/*",
        "*://*.docs.google.com/*",
        "*://*.googlevideo.com/*",
        "*://*.c.drive.google.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": [
        "*://drive.google.com/*",
        "*://*.drive.google.com/*",
        "*://docs.google.com/*",
        "*://*.docs.google.com/*",
        "*://*.googlevideo.com/*",
        "*://*.c.drive.google.com/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
